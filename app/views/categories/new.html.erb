<h1>New category</h1>

<%= error_messages_for :category %>

<% form_for(@category) do |f| %>
  <p>
    <b>Name</b><br />
    <%= f.text_field :name %>
  </p>

  <p>
    <b>Color</b><br />
    <%= f.text_field :color %>
  </p>

  <p>
    <b>Type</b><br />
    <%= f.select(:type, [['Debit', 1], ['Credit', 2]]) %>
  </p>

  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', categories_path %>
